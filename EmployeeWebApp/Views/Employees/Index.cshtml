@model IEnumerable<Employee>

@{
    ViewBag.Title = "Сотрудники";
}
<h1>Сотрудники</h1>

<a class="btn btn-success" asp-action="Create">Создать</a>

<hr/>

@if (Model.Any()){
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>ДР</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model){
                <tr>
                    <th>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="text-danger">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </th>
                    <th>@employee.Id</th>
                    <th>
                        <a asp-action="Detail" asp-route-id="@employee.Id" class="text-danger">@employee.LastName</a>
                    </th>
                    <th>@employee.FirstName</th>
                    <th>@employee.Patronymic</th>
                    <th>@employee.Birthday.ToString("d")</th>
                    <th>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="text-danger">
                            <i class="fa fa-user-edit"></i>
                        </a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <p>Сотрудников пока нет</p>
}